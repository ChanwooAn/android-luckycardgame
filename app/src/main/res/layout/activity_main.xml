<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_constraint"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_constraint"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_constraint"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_constraint"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />


    <View
        android:id="@+id/top_section"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="#F5F513"

        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintStart_toStartOf="@+id/start_constraint"
        app:layout_constraintTop_toTopOf="@id/top_constraint" />

    <TextView
        android:id="@+id/card_section_a"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_section_background"

        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="A"
        android:textColor="@color/card_section_text_color"
        android:textSize="50sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintHeight_default="percent"

        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="@id/start_constraint"
        app:layout_constraintTop_toBottomOf="@id/top_section" />

    <TextView
        android:id="@+id/card_section_b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_section_background"

        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="B"
        android:textColor="@color/card_section_text_color"
        android:textSize="50sp"

        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="@id/start_constraint"
        app:layout_constraintTop_toBottomOf="@id/card_section_a" />

    <TextView
        android:id="@+id/card_section_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_section_background"

        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="C"
        android:textColor="@color/card_section_text_color"
        android:textSize="50sp"

        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="@id/start_constraint"
        app:layout_constraintTop_toBottomOf="@id/card_section_b" />

    <TextView
        android:id="@+id/card_section_d"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_section_background"

        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="D"
        android:textColor="@color/card_section_text_color"
        android:textSize="50sp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintHeight_default="percent"

        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="@id/start_constraint"
        app:layout_constraintTop_toBottomOf="@id/card_section_c" />

    <TextView
        android:id="@+id/card_section_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_section_background"

        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="E"
        android:textColor="@color/card_section_text_color"
        android:textSize="50sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintHeight_default="percent"

        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="@id/start_constraint"
        app:layout_constraintTop_toBottomOf="@id/card_section_d" />


    <View
        android:id="@+id/bottom_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"

        android:background="@drawable/bottom_card_section_background"

        app:layout_constraintBottom_toBottomOf="@id/bottom_constraint"
        app:layout_constraintEnd_toEndOf="@id/end_constraint"
        app:layout_constraintStart_toStartOf="@id/start_constraint"
        app:layout_constraintTop_toBottomOf="@id/card_section_e" />


</androidx.constraintlayout.widget.ConstraintLayout>